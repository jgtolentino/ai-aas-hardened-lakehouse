# Development Secrets Template
# Copy to secrets.yaml and fill in values
# NEVER commit secrets.yaml to version control

database:
  # Local PostgreSQL
  host: localhost
  port: 5432
  database: postgres
  username: postgres
  password: postgres  # Change in production!
  schema: scout

supabase:
  # Local Supabase instance
  url: http://localhost:54321
  anon_key: your-local-anon-key
  service_role_key: your-local-service-role-key

superset:
  # Local Superset
  base_url: http://localhost:8088
  admin_username: admin
  admin_password: admin  # Change in production!
  secret_key: your-dev-secret-key

external_services:
  # Optional external services
  openai_api_key: ""
  mapbox_token: "pk.test.mock-token"
  slack_webhook_url: ""
  sentry_dsn: ""

auth:
  # JWT settings
  jwt_secret: dev-jwt-secret
  jwt_expiry: 3600  # 1 hour

# Development-only settings
debug:
  enable_mock_data: true
  bypass_auth: false
  verbose_logging: true