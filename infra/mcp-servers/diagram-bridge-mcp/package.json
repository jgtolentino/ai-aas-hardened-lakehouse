{
  "name": "@scout/diagram-bridge-mcp",
  "version": "1.0.0",
  "description": "MCP server for diagram generation via Kroki (Mermaid, PlantUML, Graphviz, etc.)",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts",
    "dev": "tsup src/index.ts --format esm --dts --watch",
    "start": "node dist/index.js",
    "mcp": "node dist/index.js"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "@scout/ai-cookbook": "workspace:*",
    "node-fetch": "^3.3.2",
    "crypto": "^1.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.4.0"
  },
  "keywords": [
    "mcp",
    "diagram",
    "kroki",
    "mermaid",
    "plantuml",
    "graphviz"
  ],
  "engines": {
    "node": ">=18"
  }
}