{
  "name": "scout-analytics-platform",
  "version": "1.0.0",
  "description": "Enterprise Data Platform for Philippine Retail Intelligence",
  "private": true,
  "scripts": {
    "scaffold:slice": "tsx scripts/scaffold-slice.ts",
    "gen:slice": "tsx scripts/scaffold-slice.ts",
    "docs:generate": "bash scripts/generate_docs.sh",
    "docs:serve": "cd docs-site && npm start",
    "docs:build": "cd docs-site && npm run build",
    "docs:gen": "tsx tools/docs/generate-plans.ts",
    "docs:check": "git diff --exit-code docs/claude/planning.md docs/claude/tasks.md || (echo 'Docs changed; commit required' && exit 1)",
    "docs:toc": "node tools/docs/ensure-toc.js",
    "docs:lint": "markdownlint-cli2 'docs/**/*.md'",
    "docs:links": "find docs -name '*.md' -exec markdown-link-check -q {} \\;",
    "contracts:validate": "tsx tools/contracts/check-icd.ts validate",
    "contracts:generate": "tsx tools/contracts/check-icd.ts generate",
    "contracts:diff": "git diff HEAD main -- packages/contracts/src",
    "icd:validate": "npm run contracts:validate",
    "icd:types": "npm run contracts:generate",
    "icd:docs": "npx @redocly/cli build-docs docs/scout/ICD.md",
    "test:icd": "npm run contracts:validate",
    "test:contracts": "npm run contracts:validate",
    "test:a11y": "node tools/docs/check-accessibility.js",
    "test:connection": "tsx apps/web/src/test-connection.ts",
    "figma:connect:parse": "npx @figma/code-connect connect parse --exit-on-unreadable-files",
    "figma:connect:validate": "npm run figma:connect:parse",
    "figma:connect:publish": "npx @figma/code-connect connect publish --dry-run",
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "dash:dev": "npm --workspace platform/scout/blueprint-dashboard run dev",
    "dash:build": "npm --workspace platform/scout/blueprint-dashboard run build",
    "dash:preview": "npm --workspace platform/scout/blueprint-dashboard run preview"
  },
  "devDependencies": {
    "@figma/code-connect": "1.3.4",
    "@types/node": "^20.0.0",
    "tsx": "^4.7.0",
    "turbo": "^1.11.0"
  },
  "workspaces": [
    "apps/*",
    "packages/*",
    "platform/scout/edge-ingest",
    "platform/scout/blueprint-dashboard"
  ],
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.14.0"
}