{
  "name": "scout-analytics-platform",
  "version": "1.0.0",
  "description": "Enterprise Data Platform for Philippine Retail Intelligence",
  "private": true,
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "typecheck": "turbo run type-check",
    "type-check": "turbo run type-check",
    "ci:check": "pnpm run lint && pnpm run typecheck && pnpm run test",
    "docker:build": "docker compose -f infra/docker/compose.yml build",
    "docker:up": "docker compose -f infra/docker/compose.yml up -d",
    "docker:down": "docker compose -f infra/docker/compose.yml down",
    "docker:push": "echo 'Run GitHub Actions workflow to push images to GHCR'",
    "db:migrate": "bash scripts/setup-db.sh",
    "db:seed": "psql $DATABASE_URL -f db/seeds/ci_min_brands.sql",
    "dq:check": "psql $DATABASE_URL -f dq/checks/run_all.sql",
    "scaffold:slice": "tsx scripts/scaffold-slice.ts",
    "gen:slice": "tsx scripts/scaffold-slice.ts",
    "docs:generate": "bash scripts/generate_docs.sh",
    "docs:serve": "cd docs-site && npm start",
    "docs:build": "cd docs-site && npm run build",
    "test:connection": "tsx apps/web/src/test-connection.ts",
    "dash:dev": "npm --workspace platform/scout/blueprint-dashboard run dev",
    "dash:build": "npm --workspace platform/scout/blueprint-dashboard run build",
    "dash:preview": "npm --workspace platform/scout/blueprint-dashboard run preview",
    "readme:build": "node scripts/readme-gen.mjs",
    "readme:check": "node scripts/readme-gen.mjs --check"
  },
  "devDependencies": {
    "tsx": "^4.7.0",
    "turbo": "^1.11.0",
    "@types/node": "^20.0.0"
  },
  "workspaces": [
    "apps/*",
    "packages/*",
    "platform/scout/edge-ingest",
    "platform/scout/blueprint-dashboard"
  ],
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.14.0"
}