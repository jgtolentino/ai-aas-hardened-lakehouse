{
  "name": "scout-analytics-platform",
  "version": "1.0.0",
  "description": "Enterprise Data Platform for Philippine Retail Intelligence",
  "private": true,
  "type": "module",
  "scripts": {
    "scaffold:slice": "tsx scripts/scaffold-slice.ts",
    "gen:slice": "tsx scripts/scaffold-slice.ts",
    "docs:generate": "bash scripts/generate_docs.sh",
    "docs:serve": "cd docs-site && npm start",
    "docs:build": "cd docs-site && npm run build",
    "test:connection": "tsx apps/web/src/test-connection.ts",
    "smoke": "tsx scripts/smoke-pipeline.ts",
    "smoke:rpc": "tsx scripts/smoke-all.ts",
    "bronze:generate": "node scripts/generate-bronze-zip.js",
    "bronze:verify": "node scripts/verify-bronze-layer.js",
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "docs:gen": "node scripts/generate-agent-docs.mjs && pnpm icons:build && pnpm arch:build",
    "docs:lint": "markdownlint \"docs-site/docs/**/*.mdx\"",
    "docs:linkcheck": "npx linkinator docs-site/build -r --silent || true",
    "wiki:sync": "bash scripts/wiki-sync.sh",
    "icons:build": "node scripts/icons-build.mjs",
    "diagrams:build": "node scripts/diagrams-build.mjs",
    "arch:build": "node scripts/archspec-to-mermaid.mjs && pnpm diagrams:build",
    "docs:fixpaths": "node scripts/fix-doc-image-paths.js",
    "docs:preflight": "node scripts/docs-preflight.js",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,mdx,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md,mdx,yml,yaml}\"",
    "clean": "turbo run clean && rm -rf node_modules .turbo",
    "clean:all": "pnpm clean && pnpm -r exec rm -rf node_modules",
    "prepare": "husky install",
    "pre-commit": "lint-staged",
    "security:check": "pnpm audit && trivy fs . --exit-code 1",
    "deps:check": "pnpm outdated -r",
    "deps:update": "pnpm update -r --interactive",
    "sec:scan": "tsx security/policy/enforce.ts trivy.sarif security/policy/policy.yaml",
    "sec:demo": "tsx scripts/security-demo.ts",
    "docs:verify": "node scripts/check-doc-coverage.mjs && echo \"OK\"",
    "docs:lint": "markdownlint \"docs-site/**/*.mdx\" \"docs-site/**/*.md\" && remark docs-site/docs --use remark-preset-lint-consistent --frail"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.6.0",
    "@commitlint/config-conventional": "^18.6.0",
    "@mermaid-js/mermaid-cli": "^10.9.1",
    "@svgr/core": "^8.1.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "commander": "^11.1.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-security": "^2.1.0",
    "eslint-plugin-unicorn": "^50.0.1",
    "husky": "^9.0.10",
    "js-yaml": "^4.1.0",
    "linkinator": "^6.1.4",
    "lint-staged": "^15.2.2",
    "markdownlint-cli": "^0.40.0",
    "prettier": "^3.2.5",
    "svg-sprite": "^2.0.4",
    "svgo": "^3.3.2",
    "tsx": "^4.7.0",
    "turbo": "^1.11.0",
    "typescript": "^5.3.3",
    "yaml": "^2.8.1"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "events": "^3.3.0",
    "@supabase/supabase-js": "^2.45.0",
    "adm-zip": "^0.5.10",
    "seedrandom": "^3.0.5",
    "tsx": "^4.7.0"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.14.0"
}
