{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ES2022", "DOM"],
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": false,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./",
    "composite": true,
    "incremental": true,
    "tsBuildInfoFile": "./.tsbuildinfo",
    "removeComments": false,
    "noEmit": false,
    "importHelpers": true,
    "importsNotUsedAsValues": "remove",
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@agents/*": ["./agents/*"],
      "@components/*": ["./components/*"],
      "@packages/*": ["./packages/*"],
      "@platform/*": ["./platform/*"],
      "@scripts/*": ["./scripts/*"],
      "@tests/*": ["./tests/*"],
      "@types/*": ["./types/*"]
    }
  },
  "include": [
    "src/**/*",
    "agents/**/*",
    "components/**/*",
    "packages/**/*",
    "platform/**/*",
    "scripts/**/*",
    "tests/**/*",
    "types/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    ".next",
    ".turbo",
    "coverage",
    "**/*.test.ts",
    "**/*.spec.ts"
  ],
  "references": [
    { "path": "./packages/contracts" },
    { "path": "./qa" }
  ]
}